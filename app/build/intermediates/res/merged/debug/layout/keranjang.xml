<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.etanixyz.etani.DisplayListView">
    <LinearLayout
        android:id="@+id/line1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingTop="15dip"

        android:orientation="vertical"
        android:background="#ff82bc00">
        <ImageView android:id="@+id/image_view1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:maxWidth="80dp"
            android:maxHeight="80dp"
            android:scaleType="fitXY"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/logo"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/line2"
        android:layout_below="@+id/line1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="5dip"
        android:orientation="vertical"
        android:background="#ff82bc00">
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Keranjang"
            android:textSize="12dip"
            android:textColor="@color/colorSelected"
            android:textAlignment="center"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="20dip"
        android:paddingTop="24dip"
        >
        <ImageView android:id="@+id/backbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:maxWidth="25dip"
            android:maxHeight="25dip"
            android:scaleType="fitXY"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/backbtn"
            android:onClick="back"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_below="@+id/line2"
        android:id="@+id/line3"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <ListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/listview">

        </ListView>

    </LinearLayout>
    <LinearLayout
        android:layout_below="@+id/line3"
        android:id="@+id/line4"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dip">
            <Button android:id="@+id/btnCheckout"
                android:layout_width="fill_parent"
                android:layout_height="35dip"
                android:textColor="#ffffff"
                android:textSize="11dip"
                android:onClick="checkout"
                android:background="@drawable/buttonijo"
                android:text="Checkout"/>
            </LinearLayout>

    </LinearLayout>




</RelativeLayout>
