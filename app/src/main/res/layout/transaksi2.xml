<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/line1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingTop="15dip"
        android:orientation="vertical"
        android:background="#ff82bc00">
        <ImageView android:id="@+id/image_view1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:maxWidth="80dp"
            android:maxHeight="80dp"
            android:scaleType="fitXY"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/logo"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/line2"
        android:layout_below="@+id/line1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="5dip"
        android:orientation="vertical"
        android:background="#ff82bc00">
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Detail Pemesanan"
            android:textSize="12dip"
            android:textColor="@color/colorSelected"
            android:textAlignment="center"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="20dip"
        android:paddingTop="24dip"
        >
        <ImageView android:id="@+id/backbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:maxWidth="25dip"
            android:maxHeight="25dip"
            android:scaleType="fitXY"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/backbtn"
            android:onClick="back"
            />
    </LinearLayout>
    <ScrollView
        android:layout_below="@id/line2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <fragment
                android:id="@+id/fr_a"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:name="com.etanixyz.etani.FragmentAlamat">
            </fragment>
            <fragment
                android:id="@+id/fr_p"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:name="com.etanixyz.etani.FragmentPembayaran">
            </fragment>
        </LinearLayout>

    </ScrollView>

</RelativeLayout>
