<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true">
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff">

        <LinearLayout android:id="@+id/line1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingTop="2dip"
            android:paddingBottom="1dip"
            android:paddingLeft="2dip"
            android:paddingRight="2dip"
            android:orientation="horizontal"
            android:weightSum="1">

            <ImageView android:id="@+id/btnbawangmerah"
                android:onClick="showlist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:maxWidth="178dip"
                android:maxHeight="178dip"
                android:scaleType="fitXY"
                android:layout_gravity="left"
                android:paddingRight="1dip"

                />
            <ImageView android:id="@+id/btnbawangputih"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:maxWidth="178dip"
                android:maxHeight="178dip"
                android:scaleType="fitXY"
                android:layout_gravity="right"
                android:paddingLeft="1dip"
                android:onClick="showlist2"

                />
        </LinearLayout>

        <LinearLayout android:id="@+id/line2"
            android:layout_below="@+id/line1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingTop="1dip"
            android:paddingBottom="1dip"
            android:paddingLeft="2dip"
            android:paddingRight="2dip"
            android:orientation="horizontal"
            android:weightSum="1">

            <ImageView android:id="@+id/btnbayam"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:maxWidth="178dip"
                android:maxHeight="178dip"
                android:scaleType="fitXY"
                android:layout_gravity="left"
                android:paddingRight="1dip"
                android:onClick="showlist3"

                />
            <ImageView android:id="@+id/btnkentang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:maxWidth="178dp"
                android:maxHeight="178dp"
                android:scaleType="fitXY"
                android:layout_gravity="right"
                android:paddingLeft="1dip"
                android:onClick="showlist4"

                />
        </LinearLayout>
        <LinearLayout android:id="@+id/line3"
            android:layout_below="@+id/line2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingTop="1dip"
            android:paddingBottom="1dip"
            android:paddingLeft="2dip"
            android:paddingRight="2dip"
            android:orientation="horizontal"
            android:weightSum="1">

            <ImageView android:id="@+id/btnkubis"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:maxWidth="178dp"
                android:maxHeight="178dp"
                android:scaleType="fitXY"
                android:layout_gravity="left"
                android:paddingRight="1dip"
                android:onClick="showlist5"

                />
            <ImageView android:id="@+id/btncabai"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:maxWidth="178dp"
                android:maxHeight="178dp"
                android:scaleType="fitXY"
                android:layout_gravity="right"
                android:paddingLeft="1dip"
                android:onClick="showlist6"

                />
        </LinearLayout>
        <LinearLayout android:id="@+id/line4"
            android:layout_below="@+id/line3"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingTop="1dip"
            android:paddingBottom="1dip"
            android:paddingLeft="2dip"
            android:paddingRight="2dip"
            android:orientation="horizontal"
            android:weightSum="1">

            <ImageView android:id="@+id/btnwortel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:maxWidth="178dp"
                android:maxHeight="178dp"
                android:scaleType="fitXY"
                android:layout_gravity="left"
                android:paddingRight="1dip"
                android:onClick="showlist7"

                />
            <ImageView android:id="@+id/btnsawi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:maxWidth="178dp"
                android:maxHeight="178dp"
                android:scaleType="fitXY"
                android:layout_gravity="right"
                android:paddingLeft="1dip"
                android:onClick="showlist8"

                />
        </LinearLayout>
        <LinearLayout android:id="@+id/line5"
            android:layout_below="@+id/line4"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingTop="1dip"
            android:paddingBottom="1dip"
            android:paddingLeft="2dip"
            android:paddingRight="2dip"
            android:orientation="horizontal"
            android:weightSum="1">

            <ImageView android:id="@+id/btnterong"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:maxWidth="178dp"
                android:maxHeight="178dp"
                android:scaleType="fitXY"
                android:layout_gravity="left"
                android:paddingRight="1dip"
                android:onClick="showlist9"

                />
            <ImageView android:id="@+id/btnselada"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:maxWidth="178dp"
                android:maxHeight="178dp"
                android:scaleType="fitXY"
                android:layout_gravity="right"
                android:paddingLeft="1dip"
                android:onClick="showlist10"

                />
        </LinearLayout>

        <LinearLayout android:id="@+id/line6"
            android:layout_below="@+id/line5"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingTop="1dip"
            android:paddingBottom="1dip"
            android:paddingLeft="2dip"
            android:paddingRight="2dip"
            android:orientation="horizontal"
            android:weightSum="1">

            <ImageView android:id="@+id/btntomat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:maxWidth="178dp"
                android:maxHeight="178dp"
                android:scaleType="fitXY"
                android:layout_gravity="left"
                android:paddingRight="1dip"
                android:onClick="showlist11"

                />
            <ImageView android:id="@+id/btnkangkung"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:maxWidth="178dp"
                android:maxHeight="178dp"
                android:scaleType="fitXY"
                android:layout_gravity="right"
                android:paddingLeft="1dip"
                android:onClick="showlist12"

                />
        </LinearLayout>


        <!--FOOTER START-->
        <LinearLayout android:id="@+id/footer"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingTop="20dip"
            android:orientation="vertical"
            android:layout_alignParentBottom="true"
            android:layout_below="@id/line6"
            >
            <!--LOGO START-->
            <ImageView android:id="@+id/footer1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:maxWidth="370dp"
                android:maxHeight="370dp"
                android:scaleType="fitXY"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/footer2"
                />
            <!--LOGO END-->
        </LinearLayout>
        <!--FOOTER END-->

    </RelativeLayout>
</ScrollView>